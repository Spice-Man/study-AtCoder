import java.util.*;
import java.lang.*;
 
 
public class Main {
    public static void main(String[] args) {
      Scanner scan = new Scanner(System.in);
      int a = scan.nextInt();
      int b = scan.nextInt();
      int c = scan.nextInt();
      int coin = 0;
      int login = 0;
      for (int i=1;coin<c;i++){
        coin += a;
         if(i % 7 == 0 ) coin += b;
        login = i;
      }
        System.out.println(login);
    }
}
